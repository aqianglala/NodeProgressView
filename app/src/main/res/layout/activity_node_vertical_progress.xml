<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NodeVerticalProgressActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.administrator.mynodeprogressview.widget.NodeVerticalProgressView
            android:id="@+id/nodeProgressView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:circleColor="#feb318"
            app:circleRadius="36px"
            app:circleTextColor="#fff"
            app:circleTextSize="42px"
            app:interval="144px"
            app:lineColor="#feb318"
            app:lineWidth="3px"
            app:rightTextColor="#333333"
            app:rightTextMarginLeft="48px"
            app:rightTextSize="42px" />

    </ScrollView>
</android.support.constraint.ConstraintLayout>